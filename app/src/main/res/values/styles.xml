<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextViewSloganTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorSlogan</item>
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sizeSloganTitle</item>
    </style>

    <style name="TextViewSloganText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorSlogan</item>
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:textSize">@dimen/sizeSloganText</item>
    </style>

    <style name="TextViewChatText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#777575</item>
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:textSize">@dimen/sizeSloganText</item>
    </style>

    <style name="TextViewChatName" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorOwnChatName</item>
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:textSize">@dimen/sizeChatName</item>
    </style>

    <style name="BlueButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:background">@drawable/blue_button_selector</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditTextLogin" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorSlogan</item>
        <item name="android:background">@drawable/edit_login_selector</item>
        <item name="android:textColorHint">@color/colorSloganAlpha</item>
        <item name="android:textSize">@dimen/sizeSloganText</item>
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:configChanges">keyboardHidden|orientation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppThemeWithoutActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:configChanges">keyboardHidden|orientation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
</resources>